<configuration>
    <!-- Disable Couchbase-specific logging -->
    <logger name="com.couchbase.client" level="OFF"/>
    <logger name="com.couchbase.core" level="OFF"/>
    <logger name="com.couchbase" level="OFF"/>
    <logger name="com.couchbase.client.core" level="OFF"/>
    <logger name="com.couchbase.tracing" level="OFF"/>

    <!-- Enable the root logger for other logs, like your own application logs -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <root level="INFO">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </root>
</configuration>
